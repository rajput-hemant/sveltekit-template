{
	"name": "sveltekit-template",
	"version": "0.1.0",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"start": "vite preview",
		"preview": "vite build && vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint .",
		"fmt:check": "prettier --plugin=prettier-plugin-svelte --plugin=prettier-plugin-tailwindcss --check .",
		"fmt:write": "prettier --plugin=prettier-plugin-svelte --plugin=prettier-plugin-tailwindcss --write .",
		"prepare": "husky install"
	},
	"lint-staged": {
		"*.{html,css,ts,svelte}": [
			"prettier --plugin=prettier-plugin-svelte --plugin=prettier-plugin-tailwindcss --write ."
		],
		"*.{ts,svelte}": [
			"eslint ."
		]
	},
	"devDependencies": {
		"@commitlint/cli": "^17.7.2",
		"@commitlint/config-conventional": "^17.7.0",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.20.4",
		"@total-typescript/ts-reset": "^0.5.1",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"autoprefixer": "^10.4.16",
		"clsx": "^2.0.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.30.0",
		"eslint-plugin-tailwindcss": "^3.13.0",
		"husky": "^8.0.3",
		"lint-staged": "^14.0.1",
		"lucide-svelte": "^0.284.0",
		"postcss": "^8.4.31",
		"prettier": "^3.0.3",
		"prettier-plugin-svelte": "^3.0.3",
		"prettier-plugin-tailwindcss": "^0.5.5",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.3",
		"tailwind-merge": "^1.14.0",
		"tailwindcss": "^3.3.3",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.4.2"
	}
}
